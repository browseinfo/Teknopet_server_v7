<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_import_total_price_wizard" model="ir.ui.view">
            <field name="name">import.total.price.wizard.form</field>
            <field name="model">import.total.prices.wizard</field>
            <field name="arch" type="xml">
				<form string="xls Wizard" version="7.0">
                    <group>
                    	<field name="name" />
                    </group>
                    <group col="4">
                    	<field name="partner_id" domain="[('supplier','=',True)]"/>
                    	<field name="contract_type_id" />
                    	<field name="start_date" />
                    	<field name="end_date" />
                    </group>
                    <group col="4">
                    	<field name="categ_id" />
                    </group>
                    <group>
                    	<field name="file" />
                    </group>
                    <footer>
                    	<button name="import_file" string="Import" type="object" icon="terp-camera_test" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"  icon="terp-gtk-stop"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_total_prices_wizard" model="ir.actions.act_window">
            <field name="name">Import TOTAL Pricelist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.total.prices.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_total_price_wizard"/>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>
		
		<menuitem id="menu_import_total_prices_wizard_base" name="Import TOTAL Pricelist" parent="base.menu_base_config"
			sequence="210" groups="utility_renewals.group_contract_sys_admin,utility_renewals.group_contract_admin" />
		
		<menuitem id="menu_import_total_prices_wizard" name="Import TOTAL Pricelist" parent="menu_import_total_prices_wizard_base"
			sequence="25" action="action_import_total_prices_wizard" />
			
		
    </data>
</openerp>
